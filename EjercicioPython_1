        "def es_palindromo(cadena):\n",
        "\n",
        "    cadena = cadena.lower().replace(\" \", \"\")\n",
        "\n",
        "    return cadena == cadena[::-1]\n",
        "\n",
        "\n",
        "texto = input(\"Ingresa un de texto o una palabra: \")\n",
        "\n",
        "\n",
        "if es_palindromo(texto):\n",
        "    print(\"Si es un palíndromo.\")\n",
        "else:\n",
        "    print(\"NO es un palíndromo.\")\n"
