        "def buscar_numero(lista, objetivo):\n",
        "    for i, num in enumerate(lista):\n",
        "        if num == objetivo:\n",
        "            return i\n",
        "    return -1\n",
        "\n",
        "\n",
        "numeros = input(\"Ingresa una lista de números separados por espacios: \").split()\n",
        "numeros = [int(num) for num in numeros]\n",
        "\n",
        "\n",
        "objetivo = int(input(\"Ingresa el número objetivo que deseas buscar: \"))\n",
        "\n",
        "\n",
        "posicion = buscar_numero(numeros, objetivo)\n",
        "\n",
        "\n",
        "if posicion != -1:\n",
        "    print(f\"El número se encuentra en la posición {posicion} de la lista.\")\n",
        "else:\n",
        "    print(f\"El número {objetivo} no se encuentra en la lista.\")\n"
